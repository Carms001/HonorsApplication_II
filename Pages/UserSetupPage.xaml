<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HonorsApplication_II.Pages.UserSetupPage"
             xmlns:viewmodel="clr-namespace:HonorsApplication_II.ViewModels"
             x:DataType="viewmodel:UserSetupViewModel"
             Title="">

    <Grid RowDefinitions="150,Auto,Auto,*"
      ColumnDefinitions=".10*, .80*, .10*" 
      Padding="10"
      RowSpacing="10"
      ColumnSpacing="10"> 

        <Label Grid.Column="1" Text="Welcome to Callums Honors Project" HorizontalTextAlignment="Center"/>

        <Label Grid.Row="1" Grid.Column="1"  Text="What is your Name?" HorizontalOptions="Center" FontSize="24" HorizontalTextAlignment="Center"/>

        <Entry Grid.Row="2" Grid.Column="1" Placeholder="Your name?" Text="{Binding Name}" PlaceholderColor="Grey" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="18"/>

        <Button Text="Lets Start!" Padding="30" Grid.Row="3" Grid.Column="1" MaximumWidthRequest="300" MinimumWidthRequest="10" VerticalOptions="End" Command="{Binding CreateCommand}"/>







    </Grid>

</ContentPage>