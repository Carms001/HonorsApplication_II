<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="HonorsApplication_II.PopupPages.TaskDetailsPopup" 
             CloseWhenBackgroundIsClicked="true" BackgroundColor="#80000000">


    <ScrollView VerticalOptions="Center" >

        <Frame BackgroundColor="LightGrey" WidthRequest="300" MaximumWidthRequest="300" >

            <Grid
                RowDefinitions="*,*,*,*,*,*"
                ColumnDefinitions="*"
                RowSpacing="5"
                Padding="5"
                ColumnSpacing="5">


                <Label Text="Details" HorizontalOptions="Center"/>

                <Label x:Name="TaskName" Grid.Row="1"/>
                
                <Label x:Name="Goal" Grid.Row="2"/>
                
                <Label x:Name="Deadline" Grid.Row="3"/>

                <Label x:Name="Catagory" Grid.Row="4"/>

                <Label x:Name="Decription" Grid.Row="5"/>

            </Grid>

        </Frame>

    </ScrollView>
</mopups:PopupPage>
